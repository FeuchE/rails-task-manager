<h1>All tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li class="task-item" style="display: flex; align-items: center; gap: 10px;">
      <%= check_box_tag "completed", "", task.completed, disabled: true  %>
      <%= link_to task.title, task_path(task), class: "task-link" %>
      <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "delete-link" do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </li>
  <% end %>
</ul>
<hr>
<%= link_to "Add a new task", add_task_path, class: "btn btn-primary" %>
