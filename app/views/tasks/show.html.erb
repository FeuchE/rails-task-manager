<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>
  <%= check_box_tag 'completed', '1', @task.completed, disabled: true %>
  <%= @task.completed ? "This task is completed" : "This task is not completed yet" %>
</p>
<hr>
<%= link_to "Edit", edit_task_path(@task) %> |
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%> |
<%= link_to "Back to task list", index_path %>
